@code {

    private async Task Logout()
    {
        // Sign out using the authentication scheme (default is Cookies)
        await HttpContextAccessor.HttpContext!.SignOutAsync();

        // Notify the app to refresh the auth state
        if (AuthenticationStateProvider is RevalidatingIdentityAuthenticationStateProvider<IdentityUser> revalidatingProvider)
        {
            // Force refresh
            await revalidatingProvider.GetAuthenticationStateAsync();
        }

        // Redirect to login page
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}