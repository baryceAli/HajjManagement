@page "/login"
@layout LoginLayout
@using CoreBusiness
@using HajjManagement.Shared.Layout
@using HajjManagement.Shared.Utilities

@inject NavigationManager NavigationManager

<div class="container login-container d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <div class="card login-card p-4">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Login</h3>
                    <form>
                        <div class="mb-3">
                            <label for="userName" class="form-label">User name</label>
                            <input type="text" class="form-control" id="userName" placeholder="Enter user name" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" @onclick="HandleLogin">Login</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <small><a href="#">Forgot password?</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
    private void HandleLogin()
    {
        User user = new User() // Change TempUser to User to match type definition
        {
            Id = 1,
