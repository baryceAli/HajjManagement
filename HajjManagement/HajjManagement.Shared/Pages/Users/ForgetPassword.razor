@page "/User/ForgetPassword"
@layout LoginLayout
@using HajjManagement.Shared.Layout
@using CoreBusiness.Dtos


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 w-100" style="max-width: 600px;" dir="rtl">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">طلب تعيين كلمة المرور</h3>
        </div>

        <div class="card-body">
            <EditForm Model="forgetPassword" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="email" class="form-label">البريد الإلكتروني</label>
                    <InputText id="email" class="form-control"  @bind-Value="forgetPassword.Email" />
                    <ValidationMessage For="@(() => forgetPassword.Email)" />
                </div>



                <div class="d-flex justify-content-evenly mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle-fill me-1"></i> ارسال الطلب
                    </button>
                    <button type="button" class="btn btn-secondary px-4" @onclick="onCancel">
                        <i class="bi bi-x-circle-fill me-1"></i> إلغاء
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>


@code {
    private ForgetPasswordDto forgetPassword = new();

    private void HandleValidSubmit(){}
    private void onCancel(){}
}
